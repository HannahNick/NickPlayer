<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xyz.game.TitleLayout
            android:id="@+id/TitleLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <ImageButton
                android:id="@+id/Listen"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:contentDescription="0"
                android:background="@android:color/transparent"
                android:src="@drawable/topic"/>

            <TextView
                android:id="@+id/gametitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="点击播放音频"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/operation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/mouse2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_above="@+id/soil2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-20dp"
                android:background="@android:color/transparent"
                android:contentDescription="2"
                android:scaleType="centerCrop"
                android:src="@drawable/mouse"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/soil2"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/soil"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/soil_text2"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/mouse1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="1"
                android:scaleType="centerCrop"
                android:src="@drawable/mouse"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/soil1"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@+id/mouse1"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/soil"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/soil_text1"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@+id/mouse1"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="-20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/mouse4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="70sp"
                android:layout_marginBottom="30dp"
                android:background="@android:color/transparent"
                android:contentDescription="4"
                android:scaleType="centerCrop"
                android:src="@drawable/mouse"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/soil4"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@id/mouse4"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-50sp"
                android:src="@drawable/soil"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/soil_text4"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@id/mouse4"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-50sp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/mouse3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="130dp"
                android:background="@android:color/transparent"
                android:contentDescription="3"
                android:scaleType="centerCrop"
                android:src="@drawable/mouse"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/soil3"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@id/mouse3"
                android:layout_alignRight="@+id/mouse3"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="-60dp"
                android:src="@drawable/soil"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/soil_text3"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@id/mouse3"
                android:layout_alignRight="@+id/mouse3"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="-60dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/mouse5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="5"
                android:scaleType="centerCrop"
                android:src="@drawable/mouse"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/soil5"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@id/mouse5"
                android:layout_alignRight="@+id/mouse5"
                android:layout_marginTop="-70dp"
                android:layout_marginEnd="-50dp"
                android:src="@drawable/soil"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/soil_text5"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@id/mouse5"
                android:layout_alignRight="@+id/mouse5"
                android:layout_marginTop="-70dp"
                android:layout_marginEnd="-50dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white" />
            <ImageView
                android:id="@+id/finished_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/finished"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>