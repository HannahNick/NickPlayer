<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_400"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:src="@drawable/boot_background3"
            android:padding="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <LinearLayout
            android:id="@+id/ll_account_contain"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_login_edt_bg"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="账号:"
                android:textSize="@dimen/sp25"
                android:gravity="center"
                />
            <com.xyz.edu.widget.OneKeyClearEditText
                android:id="@+id/edt_username"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入账号"
                android:textSize="@dimen/sp25"
                android:gravity="start|center"
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_password_contain"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_login_edt_bg"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ll_account_contain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="密码:"
                android:textSize="@dimen/sp25"
                android:gravity="center"
                />
            <com.xyz.edu.widget.OneKeyClearEditText
                android:id="@+id/edt_pwd"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入密码"
                android:gravity="start|center"
                android:inputType="textPassword"
                android:textSize="@dimen/sp25"
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_user_name_contain"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_login_edt_bg"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ll_password_contain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="用户名:"
                android:textSize="@dimen/sp25"
                android:gravity="center"
                />
            <com.xyz.edu.widget.OneKeyClearEditText
                android:id="@+id/edt_user_name"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入用户名"
                android:gravity="start|center"
                android:inputType="text"
                android:textSize="@dimen/sp25"
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_age_contain"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_login_edt_bg"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ll_user_name_contain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="年龄:"
                android:textSize="@dimen/sp25"
                android:gravity="center"
                />
            <com.xyz.edu.widget.OneKeyClearEditText
                android:id="@+id/edt_age"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入用户名"
                android:gravity="start|center"
                android:inputType="number"
                android:textSize="@dimen/sp25"
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sex_contain"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_login_edt_bg"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ll_age_contain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="性别:"
                android:textSize="@dimen/sp25"
                android:gravity="center"
                />
            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorBgButton"
                    android:text="男"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorBgButton"
                    android:text="女"
                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_basics_contain"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_login_edt_bg"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ll_sex_contain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="是否有基础:"
                android:textSize="@dimen/sp25"
                android:gravity="center" />
            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorBgButton"
                    android:text="有"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorBgButton"
                    android:text="无"
                    />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:text="注册"
            android:textColor="@color/black"
            android:gravity="center"
            style="@style/BtnStyle"
            app:layout_constraintTop_toBottomOf="@id/ll_basics_contain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp24"
                android:text="已有账号去登录"
                />
        </RelativeLayout>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:indicatorColor="@color/colorBgButton"
            app:layout_constraintBottom_toTopOf="@id/btn_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
